<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="@color/black"
                android:text="Sign In"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:padding="0dp"
                android:layout_gravity="start"
                android:paddingHorizontal="50dp"
                android:src="@drawable/musify1">
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="   Musify"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:textAlignment="textStart">
            </TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarSize="100dp"
                android:src="@drawable/horizontaltab"></ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\t\t\t\t\t\t\t\t\t\t\tContinue with Facebook"
                android:textColor="#186CAF"
                android:textSize="20dp"></EditText>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="319dp"
                android:layout_marginBottom="17dp"
                app:srcCompat="@drawable/facebook" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/horizontaltab"
                android:scrollbarSize="100dp">
            </ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\t\t\t\t\t\t\t\t\t\t\tContinue with Google"
                android:textColor="#E14B4B"
                android:textSize="20dp"></EditText>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="58dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="320dp"
                android:layout_marginBottom="21dp"
                app:srcCompat="@drawable/google" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/horizontaltab"
                android:scrollbarSize="100dp">
            </ImageView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Create Account"
                android:textAlignment="center"
                android:textColor="#FFAA00"
                android:textSize="20dp"></EditText>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

